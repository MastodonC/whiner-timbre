{
  "acceptedResourceRoles": ["slave_public"],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mastodonc/whiner-timbre:latest",
      "forcePullImage": true,
      "parameters": [
         {"key": "log-driver", "value": "gelf"},
          {"key": "log-opt", "value": "gelf-address=udp://logstash.sandpit-vpc.kixi:12201"},
          {"key": "log-opt", "value": "tag=staging"},
         {"key": "label", "value": "application=whiner-timbre"}
      ],
      "network": "BRIDGE",
      "portMappings": [
          {
              "containerPort": 3000,
              "hostPort": 3999,
              "protocol": "tcp"
          }
      ]
    }
  },
  "id": "whiner-timbre",
  "mem": 2048,
  "healthChecks": [{
        "protocol": "HTTP",
        "path": "/",
        "gracePeriodSeconds": 600,
        "intervalSeconds": 30,
        "portIndex": 0,
        "timeoutSeconds": 10,
        "maxConsecutiveFailures": 3
  }]
}
